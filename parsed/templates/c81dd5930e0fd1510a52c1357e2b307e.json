{"components/beautify/section-home-newsletter":"{{#if settings.show_newsletter_box}}\n    <div class=\"beautify__section {{#if index}}beautify__section--index{{index}}{{/if}} beautify__newsletter\">\n        <div class=\"container\">\n                <h2 class=\"page-heading\">{{theme_settings.newsletter_heading}}</h2>\n                <form class=\"form\" action=\"{{urls.subscribe.action}}\" method=\"post\">\n                    <fieldset class=\"form-fieldset\">\n                        <input type=\"hidden\" name=\"action\" value=\"subscribe\">\n                        <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\n                        <input type=\"hidden\" name=\"check\" value=\"1\">\n                        <div class=\"form-field\">\n                            <label class=\"form-label is-srOnly\" for=\"nl_email\">{{lang 'common.email_address'}}</label>\n                            <input class=\"form-input\" id=\"nl_email\" name=\"nl_email\" type=\"email\" value=\"{{customer.email}}\" placeholder=\"{{lang 'newsletter.email_placeholder'}}\">\n                            <button class=\"button button-primary\" type=\"submit\">{{lang 'newsletter.subscribe_submit'}}</button>\n                        </div>\n                    </fieldset>\n                </form>\n                {{#if settings.show_newsletter_summary}}\n                {{#if settings.newsletter_summary}}\n                    <p class=\"page-desc\">{{{settings.newsletter_summary}}}</p>\n                {{else if in_development}}\n                    <p class=\"page-desc\">Sign up for our newsletter and get the latest updates on new products and upcoming sales</p>\n                {{/if}}\n            {{/if}}\n        </div>\n    </div>\n{{/if}}\n"}
