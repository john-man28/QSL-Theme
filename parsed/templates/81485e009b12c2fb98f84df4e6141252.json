{"components/category/sort-box":"<fieldset class=\"form-fieldset actionBar-section actionBar-section--sort\">\n    <div class=\"form-field\">\n        <label class=\"form-label\" for=\"sort\">{{lang 'common.sorter.sort_by'}}</label>\n        <select class=\"form-select\" name=\"sort\" id=\"sort\">\n            <option value=\"featured\" {{#if sort '==' 'featured'}}selected{{/if}}>{{lang 'common.sorter.featured'}}</option>\n            <option value=\"newest\" {{#if sort '==' 'newest'}}selected{{/if}}>{{lang 'common.sorter.newest'}}</option>\n            <option value=\"bestselling\" {{#if sort '==' 'bestselling'}}selected{{/if}}>{{lang 'common.sorter.top_sellers'}}</option>\n            <option value=\"alphaasc\" {{#if sort '==' 'alphaasc'}}selected{{/if}}>{{lang 'common.sorter.alpha_asc'}}</option>\n            <option value=\"alphadesc\" {{#if sort '==' 'alphadesc'}}selected{{/if}}>{{lang 'common.sorter.alpha_desc'}}</option>\n            <option value=\"avgcustomerreview\" {{#if sort '==' 'avgcustomerreview'}}selected{{/if}}>{{lang 'common.sorter.reviews'}}</option>\n            <option value=\"priceasc\" {{#if sort '==' 'priceasc'}}selected{{/if}}>{{lang 'common.sorter.price_asc'}}</option>\n            <option value=\"pricedesc\" {{#if sort '==' 'pricedesc'}}selected{{/if}}>{{lang 'common.sorter.price_desc'}}</option>\n            {{#if result_count}}\n                <option value=\"relevance\" {{#if sort '==' 'relevance'}}selected{{/if}}>{{lang 'common.sorter.relevance'}}</option>\n            {{/if}}\n        </select>\n    </div>\n    <div class=\"beautify__actionBar-sortBy\">\n        <p class=\"_heading\">{{lang 'common.sorter.sort_by'}}</p>\n        <ul>\n            {{#if result_count}}\n                <li><button type=\"button\" {{#if sort '==' 'relevance'}}disabled{{/if}} class=\"button\" data-sort=\"relevance\">{{lang 'common.sorter.relevance'}}</button>\n            {{/if}}\n            <li><button type=\"button\" {{#if sort '==' 'featured'}}disabled{{/if}} class=\"button\" data-sort=\"featured\">{{lang 'common.sorter.featured'}}</button>\n            <li><button type=\"button\" {{#if sort '==' 'newest'}}disabled{{/if}} class=\"button\" data-sort=\"newest\">{{lang 'common.sorter.newest'}}</button>\n            <li><button type=\"button\" {{#if sort '==' 'bestselling'}}disabled{{/if}} class=\"button\" data-sort=\"bestselling\">{{lang 'common.sorter.top_sellers'}}</button>\n            <li><button type=\"button\" {{#if sort '==' 'alphaasc'}}disabled{{/if}} class=\"button\" data-sort=\"alphaasc\">{{lang 'common.sorter.alpha_asc'}}</button>\n            <li><button type=\"button\" {{#if sort '==' 'alphadesc'}}disabled{{/if}} class=\"button\" data-sort=\"alphadesc\">{{lang 'common.sorter.alpha_desc'}}</button>\n            <li><button type=\"button\" {{#if sort '==' 'avgcustomerreview'}}disablx`ed{{/if}} class=\"button\" data-sort=\"avgcustomerreview\">{{lang 'common.sorter.reviews'}}</button>\n            <li><button type=\"button\" {{#if sort '==' 'priceasc'}}disabled{{/if}} class=\"button\" data-sort=\"priceasc\" >{{{lang 'common.sorter.price_asc2'}}} \n                <svg class=\"icon\"><use xlink:href=\"#icon-arrow-sort-up\" /></svg></button>\n            <li><button type=\"button\" {{#if sort '==' 'pricedesc'}}disabled{{/if}} class=\"button\" data-sort=\"pricedesc\" >{{{lang 'common.sorter.price_desc2'}}} \n                <svg class=\"icon\"><use xlink:href=\"#icon-arrow-sort-down\" /></svg></button>\n        </ul>\n    </div>\n</fieldset>\n\n"}
