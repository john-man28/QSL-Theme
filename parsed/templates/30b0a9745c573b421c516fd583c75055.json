{
  "components/papathemes/newsletter/modal": "<div id=\"newsletterPopupModal\" class=\"modal modal--newsletter\" data-reveal data-prevent-quick-search-close>\n    <a href=\"#\" class=\"modal-close\" aria-label=\"{{lang 'common.close'}}\" role=\"button\">\n        <svg class=\"icon\"><use href=\"#icon-close2\" /></svg>\n    </a>\n    <div class=\"modal-content\">\n        <div class=\"newsletterPopup\">\n            <div class=\"newsletterPopup-image\">\n            </div>\n            <div class=\"newsletterPopup-content\">\n                <h2 class=\"newsletterPopup-heading\">{{theme_settings.newsletter_heading}}</h2>\n                <div class=\"newsletterPopup_box\">\n                    {{#if settings.show_newsletter_summary}}\n                        {{#if settings.newsletter_summary}}\n                            <p>{{{settings.newsletter_summary}}}</p>\n                        {{else if in_development}}\n                            <p>Sign up for our newsletter and get the latest updates on new products and upcoming sales</p>\n                        {{/if}}\n                    {{/if}}\n                </div>\n                {{{region name=\"newsletter_popup_content--global\"}}}\n                <div id=\"newsletterPopup-form-placeholder\" class=\"newsletterPopup-form\">\n                    <form id=\"newsletterPopup-form\" class=\"form\" action=\"{{urls.subscribe.action}}\" method=\"post\">\n                        <fieldset class=\"form-fieldset\">\n                            <input type=\"hidden\" name=\"action\" value=\"subscribe\">\n                            <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\n                            <input type=\"hidden\" name=\"check\" value=\"1\">\n                            <div class=\"form-field\">\n                                <label class=\"form-label is-srOnly\" for=\"nl_first_name\">{{lang 'settings.first_name'}}</label>\n                                <input class=\"form-input\" id=\"nl_first_name\" name=\"nl_first_name\" type=\"text\" value=\"{{customer.first_name}}\" placeholder=\"{{lang 'newsletter.name_placeholder'}}\">\n                            </div>\n                            <div class=\"form-field\">\n                                <label class=\"form-label is-srOnly\" for=\"nl_email2\">{{lang 'common.email_address'}}</label>\n                                <input class=\"form-input\" id=\"nl_email2\" name=\"nl_email\" type=\"email\" value=\"{{customer.email}}\" placeholder=\"{{lang 'newsletter.email_placeholder'}}\">\n                            </div>\n                            <input class=\"button button-primary\" type=\"submit\" value=\"{{lang 'newsletter.subscribe_submit'}}\">\n                            <div class=\"form-field\">\n                                <input type=\"checkbox\" class=\"form-checkbox\" name=\"hide\" id=\"newsletterPopup-input-hide\" value=\"1\" />\n                                <label class=\"form-label {{class}}\" for=\"newsletterPopup-input-hide\">{{lang 'newsletter.hide_popup_msg'}}</label>\n                            </div>\n                        </fieldset>\n                    </form>\n                </div>\n                {{{region name=\"newsletter_popup_content_bottom--global\"}}}\n            </div>\n        </div>\n    </div>\n    <div class=\"loadingOverlay\"></div>\n</div>\n"
}